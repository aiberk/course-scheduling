CREATE TABLE `Professor` (
	`professor_id` INT unsigned NOT NULL AUTO_INCREMENT,
	`email` TEXT DEFAULT NULL,
	`name` TEXT NOT NULL,
	`courses_assigned_id` TEXT DEFAULT NULL COMMENT 'separated by semicolons, only one space in each course name between the department name and the course code e.g.: "COSI 011A", uppercase letters only',
	`blocks_available` TEXT DEFAULT NULL COMMENT 'separated by semicolons, no spaces, uppercase letters only',
	`assigned_blocks` TEXT DEFAULT NULL COMMENT 'separated by semicolons, no spaces, uppercase letters only',
	KEY `professor_index` (`professor_id`) USING BTREE,
	PRIMARY KEY (`professor_id`)
);

INSERT INTO Professor VALUES ('festrella@brandeis.edu', 'Fernando Estrella', 'COSI 011A', 'ABC', 'A')

CREATE TABLE `Course` (
	`course_name` VARCHAR(255) NOT NULL,
	`prerequisites` TEXT DEFAULT NULL,
	`has_recitation` BOOLEAN DEFAULT NULL,
	`assigned_block` TEXT DEFAULT NULL,
	`fk_professor_id` INT DEFAULT NULL,
	`department` TEXT DEFAULT NULL,
	KEY `course_index` (`course_name`) USING BTREE,
	PRIMARY KEY (`course_name`)
);

CREATE TABLE `Requirement` (
	`requirement_id` INT unsigned NOT NULL AUTO_INCREMENT,
	`email` TEXT DEFAULT NULL,
	`course_name` VARCHAR(255) DEFAULT NULL,
	`backtoback` BOOLEAN DEFAULT NULL,
	`blocks_available` TEXT DEFAULT NULL,
	`classroom_size` TEXT DEFAULT NULL,
	KEY `requirement_index` (`requirement_id`) USING BTREE,
	PRIMARY KEY (`requirement_id`)
);